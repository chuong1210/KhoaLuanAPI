{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=shop_service;Username=postgres;Password=101204",
    "Redis": "localhost:6379"

  },


  "ServiceUrls": {
    "ProductService": "http://localhost:8080",
    "ProfileService": "http://localhost:8081",
    "OrderService": "http://localhost:8082",
    "PaymentService": "http://localhost:8083"
  },

  "MessageBroker": {
    "Type": "Kafka",
    "Kafka": {
      "BootstrapServers": "localhost:9093",
      "GroupId": "shop-service-consumer-group",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false,
      "SessionTimeoutMs": 10000,
      "Topics": {
        "ProductUpdated": "product.updated",
        "ProductDeleted": "product.deleted",
        "OrderShopCreated": "order-shop.created",
        "OrderShopCompleted": "order-shop.completed",
        "OrderShopCancelled": "order-shop.cancelled",
        "UserProfileCreated": "user-profile.created",
        "AddressUpdated": "address.updated",
        "ShopCreated": "shop.created",
        "ShopUpdated": "shop.updated",
        "VoucherShopUsed": "voucher-shop.used",
        "CartUpdated": "cart.updated",
        "CartItemRemoved": "cart-item.removed",
        "CartCleared": "cart.cleared"
      }
    }
  },

  "CircuitBreaker": {
    "ExceptionsBeforeBreaking": 5,
    "DurationOfBreakSeconds": 30,
    "RetryCount": 3,
    "RetryDelaySeconds": 1
  },

  "Cache": {
    "DefaultExpirationMinutes": 5,
    "CartExpirationMinutes": 2,
    "ShopExpirationMinutes": 5,
    "ProductExpirationMinutes": 5,
    "AddressExpirationMinutes": 10,
    "BannerExpirationMinutes": 10
  },

  "Jwt": {
    "Key": "YourSuperSecretKeyThatIsAtLeast32CharactersLongForJWTTokenGeneration",
    "Issuer": "ShopService",
    "Audience": "ShopServiceClient",
    "ExpirationInMinutes": 60
  },
  "AllowedHosts": "*",

  "AllowedOrigins": [
    "http://localhost:3000",
    "http://localhost:4200",
    "https://localhost:3000",
    "https://localhost:4200"
  ],

}
