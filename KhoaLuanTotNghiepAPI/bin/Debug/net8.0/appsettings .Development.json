{
  "ConnectionStrings": {
    "PostgreSQL": "Host=postgres-production;Port=5432;Database=shop_service;Username=shopuser;Password=${DB_PASSWORD};",
    "Redis": "redis-production:6379,password=${REDIS_PASSWORD}"
  },

  "ServiceUrls": {
    "ProductService": "http://product-service:8080",
    "ProfileService": "http://profile-service:8081",
    "OrderService": "http://order-service:8082"
  },

  "MessageBroker": {
    "Kafka": {
      "BootstrapServers": "kafka-cluster:9092",
      "GroupId": "shop-service-consumer-group"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  }
}